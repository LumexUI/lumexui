@namespace LumexUI
@inherits LumexInputBase<bool>

<LumexComponent As="label"
                Class="@RootClass"
                Style="@RootStyle"
                @attributes="@AdditionalAttributes">
    <input type="checkbox"
           value="@true"
           disabled="@Disabled"
           @ref="@Element"
           @attributes="@AdditionalAttributes"
           @onchange="@OnChangeAsync" />
</LumexComponent>

@namespace LumexUI
@inherits LumexLinkBase

<NavLink Match="@Match"
         ActiveClass="@string.Empty"
         href="@Href"
         class="@RootClass"
         style="@RootStyle"
         data-disabled="@Utils.GetDataAttributeValue( Disabled )"
         data-active="@Utils.GetDataAttributeValue( _isActive )"
         @attributes="@AdditionalAttributes"
         @ref="@_navLink">
    @ChildContent
</NavLink>

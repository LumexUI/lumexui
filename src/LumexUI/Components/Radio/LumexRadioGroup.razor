@namespace LumexUI
@inherits LumexInputBase<TValue>
@typeparam TValue

@* 
Note that we must not set IsFixed=true on the CascadingValue, because the mutations to _context 
are what cause the descendant InputRadio components to re-render themselves
*@
<CascadingValue TValue="RadioGroupContext<TValue>" Value="@_context">
    <div class="@RootClass" style="@RootStyle" @attributes="@AdditionalAttributes">
        @if( !string.IsNullOrEmpty( Label ) )
        {
            <span class="@LabelClass">@Label</span>
        }

        <div class="@WrapperClass">
            @ChildContent
        </div>

        @if( !string.IsNullOrEmpty( Description ) )
        {
            <div class="@DescriptionClass">@Description</div>
        }
    </div>
</CascadingValue>
@namespace LumexUI
@inherits LumexComponentBase

<CascadingValue TValue="TabsContext" Value="@_context" IsFixed="@true">
    @* Unfortunate hack to make `LumexTab` always re-render when the `ActiveTab` changes to prevent its removal. *@
    <CascadingValue TValue="LumexTab" Value="@_context.GetSelectedTab()">
        @{
            _context.StartCollectingTabs();
        }
        @ChildContent

        <Defer>
            @{
                _context.StopCollectingTabs();
            }
            <div class="@Slots.Root" data-slot="base">
                <LumexComponent As="@As"
                                Class="@Slots.TabList"
                                Style="@Style"
                                data-slot="tab-list"
                                @attributes="@AdditionalAttributes">
                    @_renderTabs
                </LumexComponent>
            </div>

            <_TabPanel ActiveTab="@_context.GetSelectedTab()" />
        </Defer>
    </CascadingValue>
</CascadingValue>

@code {
    private void RenderTabs(RenderTreeBuilder __builder)

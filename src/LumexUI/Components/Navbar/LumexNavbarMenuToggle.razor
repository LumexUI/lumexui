@namespace LumexUI
@inherits LumexComponentBase

<LumexComponent As="@As"
                Class="@RootClass"
                Style="@RootStyle"
                type="button"
                data-slot="toggle"
                data-expanded="@Context.Menu?.Expanded"
                @attributes="@AdditionalAttributes"
                @onclick="@Toggle">
    <span class="@ToggleIconClass" data-slot="toggle-icon" />
</LumexComponent>

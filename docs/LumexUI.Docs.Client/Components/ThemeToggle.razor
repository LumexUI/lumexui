@namespace LumexUI.Docs.Client.Components
@inject ThemeService ThemeService
@inject IPopoverService PopoverService

@using LumexUI.Shared.Icons

<LumexButton IconOnly="@true"
             Variant="@Variant.Light"
             Class="min-w-6 w-6 h-6 text-foreground-500 hover:text-foreground-600 hover:bg-transparent"
             OnClick="@(async () => await ThemeService.ToggleThemeAsync())">
    <MoonIcon Size="20" class="hidden dark:block" />
    <SunIcon Size="20" class="dark:hidden" />
</LumexButton>

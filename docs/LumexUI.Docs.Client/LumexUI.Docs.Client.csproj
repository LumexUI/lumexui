	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\..\src\LumexUI.Utilities\LumexUI.Utilities.csproj" />
	  <ProjectReference Include="..\..\src\LumexUI\LumexUI.csproj" />
	</ItemGroup>

	<ItemGroup>
		<EmbeddedResource Include="Pages/**/*.html" />
		<EmbeddedResource Include="Samples/**/*.html" />
	</ItemGroup>

	<ItemGroup>
	  <AdditionalFiles Include="Pages\Components\RadioGroup\Examples\Colors.razor" />
	  <AdditionalFiles Include="Pages\Components\RadioGroup\Examples\CustomStyles.razor" />
	  <AdditionalFiles Include="Pages\Components\RadioGroup\Examples\Description.razor" />
	  <AdditionalFiles Include="Pages\Components\RadioGroup\Examples\Disabled.razor" />
	  <AdditionalFiles Include="Pages\Components\RadioGroup\Examples\Label.razor" />

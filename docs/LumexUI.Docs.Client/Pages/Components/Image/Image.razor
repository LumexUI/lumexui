    private readonly Heading[] _headings = new Heading[]
    {
        new("Usage", [
            new("Width & Height"),
            new("Object Fit"),
            new("Radius"),
            new("Shadow"),
            new("Blur"),
            new("GrayScale"),
            new("Click Handling"),
        ]),
        new("Custom Styles"),
        new("API")
    };

    private readonly string[] _apiComponents = new string[]
    {
        nameof(LumexImage)
    };

    protected override void OnInitialized()
    {
        Layout.Initialize(
            title: "Image",
            category: "Components",
            description: "Images display visual content with configurable sizing, fit behavior, and styling options.",
            headings: _headings,
            linksProps: new ComponentLinksProps("Image", isServer: false)
        );
    }
}

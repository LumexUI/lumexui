<div class="w-full flex flex-col gap-2">
    <LumexDateInput DebounceDelay="250"
                     Behavior="@InputBehavior.OnInput"
                     Label="Search"
                     Placeholder="Type to search..."
                     Clearable="@true"
                     Class="max-w-xs"
                     @bind-Value="@_value" />

    <p class="text-sm text-default-500">
        Value: @_value
    </p>
</div>

@code {
    private DateTime? _value;
}
@using LumexUI.Shared.Icons

<ul class="min-w-48">
    <li>
        <div class="flex items-center gap-2 px-2 py-1 cursor-pointer rounded-lg hover:bg-indigo-50 hover:text-indigo-600"
             @onclick="@(() => _expanded = !_expanded)">
            @(_expanded ? @<FolderOpenIcon /> : @<FolderIcon />)
            <span>src</span>
        </div>
        <LumexCollapse As="ul" Expanded="@_expanded" Class="ml-4">
            @foreach( var dir in new[] { "app", "pages", "components" } )
            {
                <li class="flex items-center gap-2 px-2 py-1 cursor-pointer rounded-lg hover:bg-indigo-50 hover:text-indigo-600">
                    <FolderIcon />
                    <span>@dir</span>
                </li>
            }
        </LumexCollapse>
    </li>
</ul>

@code {
    private bool _expanded = true;
}

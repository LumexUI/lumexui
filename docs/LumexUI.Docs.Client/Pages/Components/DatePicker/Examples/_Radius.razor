<div class="w-full grid grid-cols-1 gap-4 md:grid-cols-2">
    @foreach (Radius radius in _radiuses)
    {
        <div>
            <LumexDatePicker Radius="@radius"
                             Label="Date"
                             Placeholder="@radius.ToString()" />

            <small class="text-default-400 mt-1">
                @radius
            </small>
        </div>
    }
</div>

@code {
    private Radius[] _radiuses = [
        Radius.None,
        Radius.Small,
        Radius.Medium,
        Radius.Large
    ];
}
        <CodeSnippet Code="@(new CodeBlock(name: "LayoutConfig.cs", snippet: "layoutConfigOpacity"))" />
    </DocsSection>

    <DocsSection Title="Full">
        <CodeSnippet Code="@(new CodeBlock(name: "LayoutConfig.cs", snippet: "layoutConfigFull"))" />
    </DocsSection>
</DocsSection>

<DocsSection Title="Customization">
    <Callout Variant="@CalloutVariant.Info">
        For detailed layout customization examples, visit the
        <LumexNavLink Href="/docs/customization/customizing-theme#customizing-layout"
                      Class="bordered-link">
            Customizing Theme
        </LumexNavLink> page.
    </Callout>
</DocsSection>

<DocsSection Title="Types">
    <DocsSection Title="BaseScale">
        <CodeSnippet Code="@(new CodeBlock(name: null, snippet: "layoutTypesBaseScale"))" />
    </DocsSection>

    <DocsSection Title="FontScale">
        <CodeSnippet Code="@(new CodeBlock(name: null, snippet: "layoutTypesFontScale"))" />
    </DocsSection>
</DocsSection>

@code {
    [CascadingParameter] private DocsContentLayout Layout { get; set; } = default!;

    private const string DummyText = "Jake thought he was making a smoothie, but halfway through blending, he realized he had added his dog's kibble instead of chia seeds. Determined not to waste food, he took a sip, only to find his dog staring at him in confusion. Now, every morning, they share breakfast—Jake with kibble, and the dog with chia seeds.";

    private readonly DocsTheme _theme = new();
    private readonly Heading[] _headings = new Heading[]
    {
        new("Overview"),
        new("Default Configuration", [
            new("Font Size"),
            new("Line Height"),
            new("Border Radius"),
            new("Box Shadow"),
            new("Opacity"),
            new("Full"),
        ]),
        new("Customization"),
        new("Types", [
            new("BaseScale"),
            new("FontScale")
        ])
    };

    protected override void OnInitialized()
    {
        Layout.Initialize(
            title: "Layout",
            category: "Customization",
            description: "Layout customization defines important aspects of the UI, including typography, shadows, and opacities for component states.",
            _headings
        );
    }
}

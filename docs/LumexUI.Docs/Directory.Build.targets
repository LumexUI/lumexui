<Project>
	<Target Name="CopyContents" AfterTargets="Build">
		<ItemGroup>
			<Files Include="$(SolutionDir)src\LumexUI\Styles\**\*" />
		</ItemGroup>
		
		<Copy SourceFiles="@(Files)" 
			  DestinationFolder="$(MSBuildProjectDirectory)\bin\lumexui" 
			  SkipUnchangedFiles="true" />
	</Target>
</Project>